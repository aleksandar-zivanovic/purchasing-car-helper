<!-- Main navigation container -->

<!-- Added Car Models button logic -->
{% if data is defined and data is not null %}
  {% set uniqueCars = [] %}

  {% for i, car in data %}
      {% set comparationArray = {
          'brand': car.brand, 
          'model': car.model,
          'engine': (car.engine.engineDisplacement / 1000)|format_number({rounding_mode: 'ceiling', fraction_digit: 1}),
          'engineDisplacement': car.engine.engineDisplacement, 
          'fuel':  car.engine.fuelType|slice(0, 1)
      } %}
      
      {% if comparationArray not in uniqueCars %}
        {% set uniqueCars = uniqueCars|merge([comparationArray]) %}
      {% endif %} 

  {% endfor %}

{% endif %}
<!-- end of Added Car Models button logic -->

<!-- Allowed routes -->
{% set allowedRoutes = ['app_cars_index', 'app_cars_by_model', 'app_cars_with_communication'] %}
{% if app.current_route in allowedRoutes %}
  {% set isAllowedRoute = true %}
{% else %}
  {% set isAllowedRoute = false %}
{% endif %}

<nav
  class="relative flex w-full flex-nowrap items-center justify-between bg-zinc-50 py-2 shadow-dark-mild dark:bg-neutral-700 lg:flex-wrap lg:justify-start lg:py-4"
  data-twe-navbar-ref>
  <div class="flex w-full flex-wrap items-center justify-between px-3">
    <!-- Hamburger button for mobile view -->
    <button
      class="block border-0 bg-transparent px-2 text-black/50 hover:no-underline hover:shadow-none focus:no-underline focus:shadow-none focus:outline-none focus:ring-0 dark:text-neutral-200 lg:hidden"
      type="button"
      data-twe-collapse-init
      data-twe-target="#navbarSupportedContent5"
      aria-controls="navbarSupportedContent5"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <!-- Hamburger icon -->
      <span
        class="[&>svg]:w-7 [&>svg]:stroke-black/50 dark:[&>svg]:stroke-neutral-200">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor">
          <path
            fill-rule="evenodd"
            d="M3 6.75A.75.75 0 013.75 6h16.5a.75.75 0 010 1.5H3.75A.75.75 0 013 6.75zM3 12a.75.75 0 01.75-.75h16.5a.75.75 0 010 1.5H3.75A.75.75 0 013 12zm0 5.25a.75.75 0 01.75-.75h16.5a.75.75 0 010 1.5H3.75a.75.75 0 01-.75-.75z"
            clip-rule="evenodd" />
        </svg>
      </span>
    </button>

    <!-- Collapsible navbar container -->
    <div
      class="!visible mt-2 hidden flex-grow basis-[100%] items-center lg:mt-0 lg:!flex lg:basis-auto"
      id="navbarSupportedContent5"
      data-twe-collapse-item>
      <!-- Left links -->
      <ul
        class="list-style-none me-auto flex flex-col ps-0 lg:mt-1 lg:flex-row"
        data-twe-navbar-nav-ref>
        <!-- Home link -->
        {{ include('/shared/_nav_button.html.twig', {'path': path('app_cars_index'), 'name': 'Home'}) }}
        {% if isAllowedRoute %}
        <!-- Add new car ad Button-->
        {{ include('/shared/_nav_button.html.twig', {'path': path('app_new_car'), 'name': 'Add new car ad'}) }}
        <!-- Cars with Communications Button -->
        {{ include('/shared/_nav_button.html.twig', {'path': path('app_cars_with_communication'), 'name': 'Cars with Communications'}) }}
        <!-- Dropdown link -->
        <li
          class="mb-4 ps-2 lg:mb-0 lg:pe-1 lg:ps-0"
          data-twe-nav-item-ref
          data-twe-dropdown-ref>
          <!-- Dropdown -->
          <a
            id="dropDownButton" 
            class="flex items-center text-black/60 transition duration-200 hover:text-black/80 hover:ease-in-out focus:text-black/80 active:text-black/80 motion-reduce:transition-none dark:text-white/60 dark:hover:text-white/80 dark:focus:text-white/80 dark:active:text-white/80 lg:px-2"
            type="button"
            id="dropdownMenuButton2"
            data-twe-dropdown-toggle-ref
            aria-expanded="false" 
            onclick='showDropDownMenu()'>
            Added Car Models
            <span class="ms-1 [&>svg]:w-5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor">
                <path
                  fill-rule="evenodd"
                  d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                  clip-rule="evenodd" />
              </svg>
            </span>
          </a>
          <ul
            id="dropdown-content" 
            class="absolute z-[1000] float-left m-0 hidden min-w-max list-none overflow-hidden rounded-lg border-none bg-white bg-clip-padding text-left text-base shadow-lg data-[twe-dropdown-show]:block dark:bg-surface-dark"
            aria-labelledby="dropdownMenuButton1"
            data-twe-dropdown-menu-ref>

            {% for singleCar in uniqueCars %}
              <li>
                <a
                  class="block w-full whitespace-nowrap bg-white px-4 py-2 text-sm font-normal text-neutral-700 hover:bg-zinc-200/60 focus:bg-zinc-200/60 focus:outline-none active:bg-zinc-200/60 active:no-underline dark:bg-surface-dark dark:text-white dark:hover:bg-neutral-800/25 dark:focus:bg-neutral-800/25 dark:active:bg-neutral-800/25"
                  href="/cars/{{ singleCar.brand }}-{{ singleCar.model }}-{{ singleCar.engineDisplacement }}-{{ singleCar.fuel }}"
                  data-twe-dropdown-item-ref
                  >{{ singleCar.brand }} {{ singleCar.model }} {{ singleCar.engine }} {{ singleCar.fuel }}</a
                >
              </li>
            {% endfor %}
            
          </ul>
        </li>
        {% endif %}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <!-- Logout Button -->
        {{ include('/shared/_nav_button.html.twig', {'path': path('app_logout'), 'name': 'Logout'}) }}
        {% else %}
        <!-- Login Button -->
        {{ include('/shared/_nav_button.html.twig', {'path': path('app_login'), 'name': 'Login'}) }}
        <!-- Registration Button -->
        {{ include('/shared/_nav_button.html.twig', {'path': path('app_register'), 'name': 'Register'}) }}
        {% endif %}
      </ul>
    </div>
  </div>
</nav>

<script>
  function showDropDownMenu() {
    let dropDownContent = document.getElementById('dropdown-content')
    dropDownContent.classList.toggle('hidden');
  }

// Close the dropdown menu if the user clicks outside of it
window.onclick = function(event) {
  let dropDownButton = document.getElementById('dropDownButton')
  let dropDownContent = document.getElementById('dropdown-content')
  if (!event.target.matches('#dropDownButton')) {
    dropDownContent.classList.add('hidden');
  }
}
</script>