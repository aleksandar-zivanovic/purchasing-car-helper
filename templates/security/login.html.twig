{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="form_wrapper">
        <form method="post">
            {% if error %}
                <div class="formblock">
                    <div class="error">
                        <p class="-errortext">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    </div>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="flash-info">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="sectiontitle">
                <p class="-title">Please sign in</p>
            </div>

            <div class="formblock">
                <div class="noerror">
                    <label for="username" class='-label'>Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="-widget" autocomplete="email" required autofocus>
                </div>
            </div>

            <div class="formblock">
                <div class="noerror">
                    <label for="username" class='-label'>Password</label>
                    <input type="password" name="_password" id="password" class="-widget" autocomplete="current-password" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            
            <div class="formblock">
                <div class="noerror">
                    <button class="-submit" type="submit">Sign in</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
